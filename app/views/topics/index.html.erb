<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>トピックス一覧</h1>
      <%= link_to "トピックスの投稿", new_topic_path, class: 'btn btn-default' %>

    <% @topics.each do |topic| %>
    <div class="row">
      <h4><strong><p><%= topic.content %></p></strong></h4>
      <%= link_to "トピックスの編集", edit_topic_path(topic.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to 'トピックスの削除', topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
