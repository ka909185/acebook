<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_for([@topic,@comment], remote: false) do |f| %>

  <%= f.hidden_field :topic_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
  </div>
</div>
